@model IEnumerable<MVCReviewSite.Models.Review>

    @{
    ViewBag.Title = "Index";
    }

    <h2>Reviews</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p>@Html.DisplayNameFor(model => model.PublishDate):@Html.DisplayFor(modelItem => item.PublishDate)</p>
                    <p>@Html.ActionLink("Full Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary", role = "button" }) </p>
                </div>
            </div>
        </div>
        }
    </div>



























